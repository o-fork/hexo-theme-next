// Custom styles.

$c-green-main = #42b983;
$c-green-light = #54FFB7;
$fw-lighter = lighter;
$fw-normal = normal;
$fw-bold = bold;

// 全局宽度
.main-inner {
  width: 800px;
}

// 选中文字的样式
::selection {
  background: $c-green-main;
  color: $selection-color;
}

// 字体
body {
  font-weight: $fw-normal;
}

// 加粗的字体
b, strong {
  font-weight: $fw-bold;
}

// 代码的颜色
code {
  color: $c-green-main;
  font-weight: $fw-lighter;
  font-size: inherit;
}

// 引用竖线颜色
blockquote {
  border-left-color: $c-green-main;
}

// 表格样式
table {
  table-layout: auto;
}

//
.headband {
  display: block;
  height: 3px;
  background: $c-green-main;
}

//
.logo-line-before i, .logo-line-after i {
  display: none;
}

// 列表页标题
.posts-expand .post-title {
  font-size: 20px;
  font-weight: $fw-bold;
}

.posts-expand .post-title, .posts-expand .post-meta {
  text-align: center;
}

.posts-expand .post-title-link::before {
  background-color: $c-green-main;
}

// 列表文章间距
.posts-expand .post {
  margin-top: 50px;
}

// 列表页文章分割先线
.post-eof {
//background: $green-main;
  display: block !important;
  margin: 40px auto 0px;
  width: 80% !important;
  background: #eee !important;
  box-shadow: 1px -1px 2px #eee;
}

// 列表页阅读更多按钮
.post-more-link .btn {
  display: none;
}

.post-toc .nav .active > a, .post-toc .nav .active-current > a {
  color: $c-green-main;
  border-bottom-color: $c-green-main;
}

.post-toc .nav .active > a:hover {
  color: $c-green-light;
}

.sidebar-nav .sidebar-nav-active {
  color: $c-green-main;
  border-bottom-color: $c-green-main;
}

.sidebar-nav .sidebar-nav-active:hover {
  color: $c-green-light;
}

// 分页器居中
.pagination {
  text-align: center;
  border-top: none;
}

.pagination .page-number.current {
  background: $c-green-main;
  border-top-color: $c-green-main;
}

.pagination > a:hover {
  background: #eee;
}

.pagination .prev, .pagination .next, .pagination .page-number {
  border-top: none;
}

// 右下角功能按钮
.sidebar-toggle {
  background: transparent;
}

.links-of-author a:before {
  display: none;
}

.page-post-detail .sidebar-toggle-line, .sidebar-toggle-line {
  background: $c-green-main;
}

.back-to-top {
  color: $c-green-main;
  background: transparent;
}

// 页脚
.footer-inner {
  text-align: center;
  font-weight: $fw-normal;
  font-size: smaller;
}

// 多说
#ds-thread #ds-reset .ds-post-options .ds-sync {
  right: 120px !important;
}

@media (max-width: 767px) {
  #canvas-nest {
    display: none;
  }
}


/*******************************************************************************/
/*******************************暗色主题****************************************/
/*******************************************************************************/

#header {
  background: #181818;
  color: #888;
}

.brand {
  color: inherit;
}

.posts-expand .post-title-link {
  color: #888;
}

a {
  color: #888;
  border-bottom: 1px solid #333;
}

a:hover {
  color: $c-green-main;
}

body {
  background-color: #222;
  color: #888;
}

table > tbody > tr:nth-of-type(odd) {
  background-color: #333;
}

table > tbody > tr:hover {
  background-color: #444;
  cursor: hand;
}

.post-nav-item a:hover {
  color: $c-green-main !important;
}

// 归档页面
.posts-collapse::after {
  background: #333;
}

.posts-collapse .post-header {
  border-bottom: 1px dashed #333;
}

#footer {
  background: #181818;
}

// 多说

.theme-next #ds-thread #ds-reset .ds-textarea-wrapper {
  border-color: #444;
}

.theme-next #ds-thread #ds-reset .ds-post-toolbar {
  border: 1px solid #444;
  background: #333;
}

#ds-thread #ds-reset .ds-post-toolbar {
  box-shadow: none !important;
}

// github comments
.gitment-editor-main,.gitment-editor-header{
  border: 1px solid #333 !important;
}

a.gitment-footer-project-link, a.gitment-footer-project-link:visited, a.gitment-editor-login-link, a.gitment-editor-login-link:visited {
    color: $c-green-main !important;
}
.gitment-editor-body textarea {
  background-color: #333 !important;
  color: #666 !important;
}
.gitment-editor-tab.gitment-selected {
    color: #ddd !important;
    border-color: #333 !important;
    background-color: #333 !important;
}
.gitment-editor-main::after,
.gitment-comment-main::after {
  border-right-color: #333 !important;
}
.gitment-editor-main::before, .gitment-comment-main::before {
    border-right-color: #333 !important;
}

.gitment-comment-header {
    color: #999 !important;
    background-color: #222 !important;
}
.gitment-markdown {
  color: #666 !important;
}

.gitment-comment-main, .gitment-editor-main {
    border-color: #333 !important;
}

.gitment-editor-submit{
  background-color: $c-green-main !important;
}

.gitment-editor-submit:hover{
  background-color: $c-green-light !important;
}

// 列表页文章分割先线
.post-eof {
  display: block !important;
  margin: 40px auto 0px;
  width: 80% !important;
  background: #333 !important;
  box-shadow: none;
}

.highlight .gutter pre {
  background-color: #181818;
}

/*定义滚动条宽高及背景，宽高分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
  background-color: #222;
}

/*定义滚动条的轨道，内阴影及圆角*/
::-webkit-scrollbar-track {
  box-shadow: inset 0 0 3px rgba(0, 0, 0, .3);
}

/*定义滑块，内阴影及圆角*/
::-webkit-scrollbar-thumb {
  box-shadow: inset 0 0 3px rgba(0, 0, 0, .3);
  background-color: #333;
}

